<div class="actions module width_full">
  <span class="icn_new_article"><%= link_to t('admin.new_resource', :resource_name => resource_class.model_name.human), new_resource_path %></span>
  <% if action_name == 'show' %>
    <span class="icn_edit_article"><%= link_to t('admin.edit_resource', :resource_name => resource_class.model_name.human), edit_resource_path(resource) %></span>
  <% end %>
</div>

<% editable = true if editable.nil? %>
<article class="module width_full">
  <%= form_for([:admin, resource]) do |f| %>
	  <header><h3><%= form_title(f.object) %></h3></header>
		  <div class="module_content">
				  <fieldset>
            <%= f.label :name %>
            <%= editable ? f.text_field(:name) : f.object.name %>
				  </fieldset>
          <div class="clear"></div>
		  </div>
	    <%= render 'form_footer', :f => f, :editable => editable %>
  <% end %>
</article>

